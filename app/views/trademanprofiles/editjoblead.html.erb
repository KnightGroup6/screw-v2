    	<% end %>
    </div>
</nav>

<div>
	<ul>
		<li><%= link_to 'Profile', trademanprofiles_path %> </li>
		<li><%= link_to 'Job Leads', jobleads_trademanprofiles_path %> </li>
		<li><%= link_to 'Purchased Jobs', purchased_trademanprofiles_path %> </li>
