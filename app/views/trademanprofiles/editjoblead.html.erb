<!-- This should be a form -->
<div>
	<h2>Job Lead Settings</h2>
	<div class="tabs">
	    
	   <div class="tab">
	       <input type="radio" id="tab-1" name="tab-group-1" checked>
	       <label for="tab-1">Area</label>
	       <div class="content">
	       	<%= render '/shared/trademanprofile_area' %>
	       </div> 
	   </div>
	    
	   <div class="tab">
	       <input type="radio" id="tab-2" name="tab-group-1">
	       <label for="tab-2">Skills & Trades</label>
	       <div class="content">
	         <%= render '/shared/trademanprofile_skills' %>
	       </div> 
	   </div>
	    
	    <div class="tab">
	       <input type="radio" id="tab-3" name="tab-group-1">
	       <label for="tab-3">Certifications</label>
	       <div class="content">
	           <%= render '/shared/trademanprofile_certifications' %>
	       </div> 
	   </div>

	    <div class="tab">
	       <input type="radio" id="tab-4" name="tab-group-1">
	       <label for="tab-4">Alert Contact Preferences</label>
	       <div class="content">
	           <%= render '/shared/trademanprofile_alerts' %>
	       </div> 
	   </div>
	    
	</div>
</div>